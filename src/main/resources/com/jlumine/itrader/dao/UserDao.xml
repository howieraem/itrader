<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.jlumine.itrader.dao.UserDao">

    <select id="findByEmail" parameterType="java.lang.String" resultType="com.jlumine.itrader.model.User">
        select * from user where email = #{email}
    </select>

    <insert id="save" parameterType="com.jlumine.itrader.model.User" useGeneratedKeys="true" keyProperty="id">
        insert into user values (#{id}, #{email}, #{password}, #{pin})
    </insert>

    <insert id="initInfo" parameterType="com.jlumine.itrader.model.User">
        insert into profile values (#{id}, 5000, null)
    </insert>
</mapper>